{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "dependencyDashboard": true,
  "dependencyDashboardAutoclose": false,
  "prHourlyLimit": 0,
  "semanticCommits": "enabled",
  "addLabels": ["dependencies"],
  "minor": {
    "addLabels": ["automerge"]
  },
  "patch": {
    "addLabels": ["automerge"]
  },
  "rust":{
    "addLabels": ["rust"]
  },
  "github-actions": {
    "addLabels": ["github_actions"]
  },
  "npm":{
    "addLabels": ["npm"]
  },
  "includeForks": true
}
